{
  "name": "cooper",
  "version": "1.0.0",
  "description": "Personal finance/budgeting platform written in TypeScript",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo run lint prettier",
    "lint:fix": "turbo run lint:fix prettier:fix",
    "prettier": "prettier --check \"./**/*.{tsx,ts,json}\"",
    "prettier:fix": "prettier --check --write \"./**/*.{tsx,ts,json}\"",
    "test": "turbo run test",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "dev": "turbo run dev --parallel"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.1",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "start-server-and-test": "^2.0.12",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.5",
    "typescript": "5.9.0-beta",
    "typescript-eslint": "^8.31.0"
  },
  "resolutions": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
