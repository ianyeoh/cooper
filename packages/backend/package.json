{
  "name": "@cooper/backend",
  "version": "1.0.0",
  "description": "Express backend API for cooper home management system",
  "main": "build/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --timeout 10000 --require mocha-suppress-logs --require src/tests/hooks.ts --import=tsx src/**/*.spec.ts",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=text --reporter=json-summary mocha --timeout 10000 --require mocha-suppress-logs --require src/tests/hooks.ts --import=tsx src/**/*.spec.ts",
    "build": "tsc --build",
    "start": "node build/index.js",
    "dev": "cross-env NODE_ENV=dev ts-node-dev src/index.ts"
  },
  "dependencies": {
    "@anatine/zod-mock": "^3.14.0",
    "@cooper/backend": "workspace:*",
    "@cooper/ts-rest": "workspace:*",
    "@sentry/node": "^8.37.1",
    "@ts-rest/express": "^3.51.0",
    "@ts-rest/open-api": "^3.51.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "kysely": "^0.27.5",
    "morgan": "^1.10.0",
    "openapi3-ts": "^4.4.0",
    "picocolors": "^1.1.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.6.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^5.0.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "mocha": "^11.1.0",
    "mocha-suppress-logs": "^0.5.1",
    "nyc": "^17.1.0",
    "supertest": "^7.0.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.3"
  }
}
